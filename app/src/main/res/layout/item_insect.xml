<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:maxWidth="100dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintLeft_toLeftOf="@id/imageView"
        app:layout_constraintRight_toRightOf="@id/imageView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="111111111111111"
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="1111111"
        app:layout_constraintLeft_toRightOf="@id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sizeText"
        app:layout_constraintRight_toLeftOf="@id/monthIntervalView"
        android:id="@+id/placeText"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="111111"
        app:layout_constraintLeft_toLeftOf="@id/placeText"
        app:layout_constraintTop_toBottomOf="@id/placeText"
        app:layout_constraintBottom_toTopOf="@id/priceText"
        android:id="@+id/sizeText"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="111111"
        app:layout_constraintLeft_toLeftOf="@id/placeText"
        app:layout_constraintTop_toBottomOf="@id/sizeText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/priceText"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="wrap_content"/>
    <com.kagami.animalcrossingwiki.view.MonthIntervalView
        android:id="@+id/monthIntervalView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/placeText"
        app:layout_constraintRight_toLeftOf="@id/clockView"
        android:layout_width="100dp"
        android:layout_height="70dp"/>
    <com.kagami.animalcrossingwiki.view.ClockView
        android:id="@+id/clockView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/monthIntervalView"
        android:layout_width="70dp"
        android:layout_height="70dp"/>
<View
    android:background="#666666"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:layout_height="0.5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>